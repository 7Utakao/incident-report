{
  "name": "ir-report-api",
  "version": "1.0.0",
  "description": "Lambda function for incident report API",
  "main": "index.js",
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=index.js",
    "zip": "powershell -NoProfile -Command \"Compress-Archive -Path index.js -DestinationPath function.zip -Force\"",
    "deploy": "npm run build && npm run zip && aws lambda update-function-code --function-name incident-report-api-dev --zip-file fileb://function.zip --region ap-northeast-1"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.490.0",
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "ajv": "^8.12.0",
    "jose": "^6.0.13",
    "openai": "^4.28.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "esbuild": "^0.25.0",
    "typescript": "^5.3.3"
  }
}
